{
  "name": "stock-helper",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "description": "stock helper project",
  "author": {
    "name": "CoolSnow",
    "email": "coolsnow0927@gmail.com"
  },
  "scripts": {
    "dev": "run-p dev:vite dev:electron",
    "dev:vite": "cross-env NODE_ENV=development vite",
    "dev:electron": "electron src/background.js",
    "build": "run-s build:vite build:electron",
    "build:vite": "cross-env NODE_ENV=production vite build --base=./",
    "build:electron": "electron-builder build",
    "postinstall": "install-app-deps"
  },
  "dependencies": {
    "@vueuse/core": "^4.0.2",
    "axios": "^0.20.0",
    "electron-window-state": "^5.0.3",
    "lodash-es": "^4.17.20",
    "mockjs": "^1.1.0",
    "vant": "^3.0.1",
    "vue": "^3.0.5",
    "vue-i18n": "^9.0.0-beta.18",
    "vue-router": "^4.0.2",
    "vuex": "^4.0.0-rc.1"
  },
  "devDependencies": {
    "@antfu/eslint-config-vue": "^0.3.4",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@vue/compiler-sfc": "^3.0.5",
    "@vuedx/typescript-plugin-vue": "^0.2.4-0",
    "babel-plugin-import": "^1.13.1",
    "cross-env": "^7.0.3",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "electron-store": "^6.0.1",
    "eslint": "^7.17.0",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "pnpm": "^5.14.1",
    "tailwindcss": "^1.9.4",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3",
    "vite": "^1.0.0-rc.9",
    "vite-plugin-components": "^0.2.14",
    "vite-plugin-mock": "^1.0.9",
    "vite-plugin-purge-icons": "^0.4.5"
  },
  "main": "src/background.js",
  "build": {
    "productName": "stockhelper",
    "appId": "app.coolsnow.stockhelper",
    "directories": {
      "output": "build"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "differentialPackage": true,
      "allowElevation": false
    },
    "mac": {
      "target": "dmg",
      "icon": "./public/icon.icns"
    },
    "win": {
      "icon": "./public/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "files": [
      "src/background.js",
      "dist",
      "tailwind.config.js"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": "@antfu/eslint-config-vue"
  }
}
